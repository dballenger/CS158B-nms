div.flash_info, div.flash_success, div.flash_warning, div.flash_error {
  border: 1px solid;
  margin: 10px 0px;
  padding: 15px 10px 15px 50px;
  background-repeat: no-repeat;
  background-position: 10px center;
}
div.flash_info {
  color: #00529B;
  background-color: #BDE5F8;
  background-image: url('<%= asset_path("alerts/information.png") %>');
}
div.flash_success {
  color: #4F8A10;
  background-color: #DFF2BF;
  background-image: url('<%= asset_path("alerts/success.png") %>');
}
div.flash_warning {
  color: #9F6000;
  background-color: #FEEFB3;
  background-image: url('<%= asset_path("alerts/warning.png") %>');
}
div.flash_error {
  color: #D8000C;
  background-color: #FFBABA;
  background-image: url('<%= asset_path("alerts/error.png") %>');
}
